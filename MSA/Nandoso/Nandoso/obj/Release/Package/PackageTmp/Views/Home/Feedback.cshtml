                <div class="feedbackform">
                    <h1>Feedback Form</h1>
                    <form action="http://www.huanggaoxin.com/sendemail/mailer_wuxin.php" method="get" target="_blank">
                        <p>First Name:</p>
                        <input type="text" name="name" />
                        <br />
                        <br />
                        <p>Email:</p>
                        <input type="email" name="email" />
                        <br />
                        <br />
                        <p>Your feedback</p>
                        <textarea name="feedback" rows="10" cols="30"></textarea><br />
                        <input type="submit" value="submit" />
                    </form>
                </div>
            </div>
        </div>
    </div>
